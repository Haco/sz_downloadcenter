<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>General Settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>Layout</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="1">
										<numIndex index="0">Download Button</numIndex>
										<numIndex index="1">Product->showDownloadButton;Product->show;Division->list</numIndex>
									</numIndex>
								</items>
								<maxitems>1</maxitems>
								<size>1</size>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.renderAsButton>
						<TCEforms>
							<exclude>1</exclude>
							<label>Render as Button</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.renderAsButton>
					<settings.overrideButtonLabel>
						<TCEforms>
							<l10n_mode>mergeIfNotBlank</l10n_mode>
							<exclude>1</exclude>
							<label>Override: Button Label</label>
							<config>
								<type>input</type>
								<size>15</size>
								<eval>null</eval>
								<placeholder>LLL:EXT:sz_downloadcenter/Resources/Private/Language/locallang.xlf:button_label.downloadButton</placeholder>
								<mode>useOrOverridePlaceholder</mode>
							</config>
						</TCEforms>
					</settings.overrideButtonLabel>
					<settings.customClasses>
						<TCEforms>
							<l10n_mode>mergeIfNotBlank</l10n_mode>
							<exclude>1</exclude>
							<label>Custom Classes (Comma separated)</label>
							<config>
								<type>input</type>
								<size>25</size>
								<eval>trim</eval>
							</config>
						</TCEforms>
					</settings.customClasses>
					<settings.downloadProductId>
						<TCEforms>
							<exclude>1</exclude>
							<label>Link to Product</label>
							<config>
								<type>select</type>
								<items type='array'>
									<numIndex index='0' type='array'>
										<numIndex index='0'></numIndex>
										<numIndex index='1'>-1</numIndex>
									</numIndex>
								</items>
								<foreign_table>tx_szdownloadcenter_domain_model_product</foreign_table>
								<size>10</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<_PADDING>12</_PADDING>
									<_VALIGN>middle</_VALIGN>
									<numIndex index="suggest">
										<type>suggest</type>
									</numIndex>
								</wizards>
							</config>
						</TCEforms>
					</settings.downloadProductId>
					<settings.overrideProductId>
						<TCEforms>
							<exclude>1</exclude>
							<label>Override Product ID in Page Settings</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.overrideProductId>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>
